<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="377dp"
            android:layout_height="242dp"
            android:gravity="center|right|center_horizontal"
            android:minHeight="48dp"
            android:textColor="#0C0C0C"
            android:textSize="90sp"
            tools:text="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C8C6C6"
            android:text="CE"
            android:textColor="#121111"
            android:textSize="34sp"
            app:iconTint="#807D7D"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C8C6C6"
            android:text="C"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btnBS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C8C6C6"
            android:text="BS"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C8C6C6"
            android:text="/"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E4DFDF"
            android:text="7"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E4DFDF"
            android:text="8"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E4DFDF"
            android:text="9"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C8C6C6"
            android:text="*"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E4DFDF"
            android:text="4"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E4DFDF"
            android:text="5"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E4DFDF"
            android:text="6"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C8C6C6"
            android:text="-"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E4DFDF"
            android:text="1"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E4DFDF"
            android:text="2"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E4DFDF"
            android:text="3"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C8C6C6"
            android:text="+"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPosNeg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C8C6C6"
            android:text="+/-"
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E4DFDF"
            android:text="0"
            android:textColor="#121111"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C8C6C6"
            android:text="."
            android:textColor="#121111"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnResult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C8C6C6"
            android:text="="
            android:textColor="#121111"
            android:textSize="34sp"
            app:rippleColor="#616161"
            app:strokeColor="#777575" />
    </LinearLayout>

</LinearLayout>